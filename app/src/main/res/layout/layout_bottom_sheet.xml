<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/core_dimen_size_20dp"
                      android:layout_marginBottom="@dimen/core_dimen_size_12dp"
                      android:gravity="center"
                      android:orientation="horizontal">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_dot_black"/>

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_dot_red"/>

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_dot_blue"/>

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_dot_orange"/>

        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BMW M2 Competition"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/core_dimen_size_20dp"
                android:layout_marginBottom="@dimen/core_dimen_size_8dp"
                android:layout_marginRight="@dimen/core_dimen_size_20dp"
                android:layout_marginLeft="@dimen/core_dimen_size_20dp"
                android:textSize="@dimen/core_font_size_18sp" />

        <TextView android:id="@+id/tvCarPrice"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/colorBlue"
                  android:textStyle="bold"
                  android:layout_marginRight="@dimen/core_dimen_size_20dp"
                  android:layout_marginLeft="@dimen/core_dimen_size_20dp"
                  android:text="Rp.5,1 M"/>


        <RatingBar
                android:id="@+id/tvCarRating"
                style = "?android:attr/ratingBarStyleSmall"
                android:theme="@style/RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/core_dimen_size_20dp"
                android:layout_marginLeft="@dimen/core_dimen_size_20dp"
                android:numStars="4"/>

        <TextView android:id="@+id/tvDealerName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="@dimen/core_dimen_size_20dp"
                  android:layout_marginLeft="@dimen/core_dimen_size_20dp"
                  android:textSize="@dimen/core_font_size_12sp"
                  android:text="Totok Dealer"/>

        <View android:layout_width="match_parent"
              android:background="@color/colorGrey"
              android:layout_marginTop="@dimen/core_dimen_size_8dp"
              android:layout_marginBottom="8dp"
              android:layout_marginLeft="@dimen/core_dimen_size_20dp"
              android:layout_marginRight="@dimen/core_dimen_size_20dp"
              android:layout_height="2dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/core_dimen_size_8dp"
                  android:layout_marginBottom="@dimen/core_dimen_size_4dp"
                  android:layout_marginLeft="@dimen/core_dimen_size_20dp"
                  android:layout_marginRight="@dimen/core_dimen_size_20dp"
                  android:text="Pilih Metode Pembayaran"/>

        <Spinner android:layout_width="match_parent"
                 android:id="@+id/spinPaymentMethod"
                 android:layout_marginLeft="@dimen/core_dimen_size_20dp"
                 android:layout_marginRight="@dimen/core_dimen_size_20dp"
                 android:layout_marginBottom="@dimen/core_dimen_size_20dp"
                 android:layout_height="wrap_content">

        </Spinner>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/core_dimen_size_4dp"
                  android:layout_marginLeft="@dimen/core_dimen_size_20dp"
                  android:layout_marginRight="@dimen/core_dimen_size_20dp"
                  android:text="Pilih Bank"/>

        <Spinner android:layout_width="match_parent"
                 android:id="@+id/spinBank"
                 android:layout_marginLeft="@dimen/core_dimen_size_20dp"
                 android:layout_marginRight="@dimen/core_dimen_size_20dp"
                 android:layout_marginBottom="@dimen/core_dimen_size_30dp"
                 android:layout_height="wrap_content">

        </Spinner>

        <LinearLayout
                android:id="@+id/layoutAdditional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@dimen/core_dimen_size_4dp"
                      android:layout_marginLeft="@dimen/core_dimen_size_20dp"
                      android:layout_marginRight="@dimen/core_dimen_size_20dp"
                      android:text="Pilih Simulasi Kredit"/>

            <Spinner android:layout_width="match_parent"
                     android:id="@+id/spinSimulasi"
                     android:layout_marginLeft="@dimen/core_dimen_size_20dp"
                     android:layout_marginRight="@dimen/core_dimen_size_20dp"
                     android:layout_marginBottom="@dimen/core_dimen_size_30dp"
                     android:layout_height="wrap_content">

            </Spinner>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@dimen/core_dimen_size_4dp"
                      android:layout_marginLeft="@dimen/core_dimen_size_20dp"
                      android:layout_marginRight="@dimen/core_dimen_size_20dp"
                      android:text="Pilih Asuransi"/>

            <Spinner android:layout_width="match_parent"
                     android:id="@+id/spinAsuransi"
                     android:layout_marginLeft="@dimen/core_dimen_size_20dp"
                     android:layout_marginRight="@dimen/core_dimen_size_20dp"
                     android:layout_marginBottom="@dimen/core_dimen_size_30dp"
                     android:layout_height="wrap_content">

            </Spinner>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/simulasiDP"
                      android:visibility="gone"
                      android:layout_marginLeft="@dimen/core_dimen_size_20dp"
                      android:layout_marginRight="@dimen/core_dimen_size_20dp"
                      android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Pilih Hasil Simulasi"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/core_dimen_size_4dp"
                          android:orientation="horizontal">

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/colorBlue"
                              android:textStyle="bold"
                              android:textSize="@dimen/core_font_size_12sp"
                              android:text="TENOR"/>

                </LinearLayout>

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/colorBlue"
                              android:textStyle="bold"
                              android:textSize="@dimen/core_font_size_12sp"
                              android:text="TOTAL DP"/>

                </LinearLayout>

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/colorBlue"
                              android:textStyle="bold"
                              android:textSize="@dimen/core_font_size_12sp"
                              android:text="ANGSURAN"/>

                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                               android:layout_height="50dp"
                                               android:layout_marginTop="@dimen/core_dimen_size_4dp"
                                               android:layout_gravity="center_vertical">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:orientation="horizontal">

                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_gravity="center_vertical"
                                  android:layout_weight="1">

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/colorBlue"
                                  android:textStyle="bold"
                                  android:layout_marginLeft="@dimen/core_dimen_size_8dp"
                                  android:textSize="@dimen/core_font_size_12sp"
                                  android:text="12"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1">

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/colorBlue"
                                  android:textStyle="bold"
                                  android:textSize="@dimen/core_font_size_12sp"
                                  android:text="508.912.000"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1">

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/colorBlue"
                                  android:textStyle="bold"
                                  android:textSize="@dimen/core_font_size_12sp"
                                  android:text="97.032.000"/>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                               android:layout_height="50dp"
                                               android:layout_marginTop="@dimen/core_dimen_size_4dp"
                                               android:layout_gravity="center_vertical">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:orientation="horizontal">

                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_gravity="center_vertical"
                                  android:layout_weight="1">

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/colorBlue"
                                  android:textStyle="bold"
                                  android:layout_marginLeft="@dimen/core_dimen_size_8dp"
                                  android:textSize="@dimen/core_font_size_12sp"
                                  android:text="24"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1">

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/colorBlue"
                                  android:textStyle="bold"
                                  android:textSize="@dimen/core_font_size_12sp"
                                  android:text="479.840.000"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1">

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/colorBlue"
                                  android:textStyle="bold"
                                  android:textSize="@dimen/core_font_size_12sp"
                                  android:text="50.485.000"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnPilih"
                android:layout_below="@+id/llReview"
                android:text="Lanjutkan"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="@dimen/core_dimen_size_16dp"
                android:layout_marginLeft="@dimen/core_dimen_size_16dp"
                android:layout_marginTop="@dimen/core_dimen_size_30dp"
                android:layout_marginBottom="@dimen/core_dimen_size_12dp"
                android:background="@drawable/btn_blu"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>