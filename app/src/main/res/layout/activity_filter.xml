<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.filter.FilterActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <include layout="@layout/layout_toolbar_no_icon"/>

        <view android:layout_width="match_parent"
              android:layout_height="8dp"
              android:background="@color/colorGrey">
        </view>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/core_dimen_size_20dp"
                      android:layout_marginRight="@dimen/core_dimen_size_20dp"
                      android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/core_dimen_size_8dp"
                      android:layout_marginBottom="@dimen/core_dimen_size_4dp"
                      android:text="Merek"/>

            <Spinner android:layout_width="match_parent"
                     android:id="@+id/spinBrand"
                     android:layout_marginBottom="@dimen/core_dimen_size_4dp"
                     android:layout_height="wrap_content"/>

            <view android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorGreyTitle"/>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>