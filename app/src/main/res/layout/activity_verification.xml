<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="true"
        tools:context=".ui.verification.VerificationActivity">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">


        <include layout="@layout/layout_toolbar_no_icon"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/core_dimen_size_20dp"
                      android:layout_marginLeft="@dimen/core_dimen_size_20dp"
                      android:layout_marginRight="@dimen/core_dimen_size_20dp"
                      android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:textSize="@dimen/core_font_size_16sp"
                      android:text="Data Personal"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorGreyTitle"
                      android:layout_marginTop="@dimen/core_font_size_10sp"
                      android:text="Nama Lengkap Seperti di KTP"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:textColor="@color/colorBlue"
                      android:text="Lorem Ipsum"/>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="4dp"
                  android:background="@color/colorGreyTitle"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorGreyTitle"
                      android:layout_marginTop="@dimen/core_font_size_10sp"
                      android:text="Nomor KTP"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:textColor="@color/colorBlue"
                      android:text="3322012401910910"/>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="4dp"
                  android:background="@color/colorGreyTitle"/>


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorGreyTitle"
                      android:layout_marginTop="@dimen/core_font_size_10sp"
                      android:text="Nomor KK (Kartu Keluarga)"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:textColor="@color/colorBlue"
                      android:text="3322012401910910"/>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="4dp"
                  android:background="@color/colorGreyTitle"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorGreyTitle"
                      android:layout_marginTop="@dimen/core_font_size_10sp"
                      android:text="Nomor Handphone"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:textColor="@color/colorBlue"
                      android:text="08712371283"/>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="4dp"
                  android:background="@color/colorGreyTitle"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorGreyTitle"
                      android:layout_marginTop="@dimen/core_font_size_10sp"
                      android:text="Alamat Email"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:textColor="@color/colorBlue"
                      android:text="kevin_ads@ciki.com"/>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="4dp"
                  android:background="@color/colorGreyTitle"/>


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorGreyTitle"
                      android:layout_marginTop="@dimen/core_font_size_10sp"
                      android:text="Tempat Tinggal"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:textColor="@color/colorBlue"
                      android:text="Jalan. M. H Tamrin"/>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="4dp"
                  android:background="@color/colorGreyTitle"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorGreyTitle"
                      android:layout_marginTop="@dimen/core_font_size_10sp"
                      android:text="Foto KTP"/>
            
            <androidx.cardview.widget.CardView android:layout_width="150dp"
                                               android:layout_height="80dp"
                                               android:layout_marginTop="@dimen/core_dimen_size_4dp"
                                               app:cardBackgroundColor="@color/colorBlue"
                                               app:cardCornerRadius="@dimen/core_dimen_size_8dp">

            </androidx.cardview.widget.CardView>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorGreyTitle"
                      android:layout_marginTop="@dimen/core_font_size_10sp"
                      android:text="Ambil Swafoto"/>

            <androidx.cardview.widget.CardView android:layout_width="150dp"
                                               android:layout_height="80dp"
                                               android:layout_marginTop="@dimen/core_dimen_size_4dp"
                                               app:cardBackgroundColor="@color/colorBlue"
                                               app:cardCornerRadius="@dimen/core_dimen_size_8dp">

            </androidx.cardview.widget.CardView>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorGreyTitle"
                      android:layout_marginTop="@dimen/core_font_size_10sp"
                      android:text="Ambil Swafoto + Foto KTP"/>

            <androidx.cardview.widget.CardView android:layout_width="150dp"
                                               android:layout_height="80dp"
                                               android:layout_marginTop="@dimen/core_dimen_size_4dp"
                                               app:cardBackgroundColor="@color/colorBlue"
                                               app:cardCornerRadius="@dimen/core_dimen_size_8dp">

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/core_dimen_size_20dp"
                    android:layout_marginBottom="@dimen/core_dimen_size_20dp"
                    android:text="Dengan ini saya telah membaca, memahami dan menyetujui hal-hal yang tercantum pada syarat dan ketentuan pengguna Car-Mob"/>

            <Button
                    android:id="@+id/btnLanjutkan"
                    style="@style/CommonButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/core_dimen_size_12dp"
                    android:layout_marginBottom="@dimen/core_dimen_size_24dp"
                    android:text="Lanjutkan" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>