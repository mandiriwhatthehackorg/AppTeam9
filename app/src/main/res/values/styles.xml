<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_blu</item>
        <item name="android:textSize">@dimen/core_font_size_14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextHintInputLayout" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorGrey</item>
        <item name="colorControlActivated">@color/colorOrange</item>
    </style>
</resources>
